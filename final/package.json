{
  "name": "day-routine",
  "version": "1.1.0",
  "productName": "Day Routine",
  "description": "Day's schedule organizer",
  "main": "main.js",
  "repository": "https://github.com/AlexeyArno/Day-Routine",
  "author": {
    "email": "ledssssa@gmail.com",
    "name": "Alexey Arno"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.1.4"
  },
  "dependencies": {
    "node-notifier": "^5.2.1"
  },
  "build": {
    "appId": "DayRoutine",
    "directories":{
      "output": "../dist"
    },
    "extraFiles": [
      {
        "from": "final/res/images",
        "to": "resources",
        "filter":[
          "**/*"
        ]
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "category": "GNOME;GTK;Network;Utility",
      "packageCategory": "GNOME;GTK;Network;Utility",
      "description": "Day's Routines Creator",
      "target": [
        "deb",
        "zip",
        "AppImage",
        "snap"
      ],
      "maintainer": "Alexey Arno <ledssssa@gmail.com>",
      "icon": "./res/images/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "deb": {
      "synopsis": "Day-Routine Desktop App"
    },
    "snap": {
      "synopsis": "Day-Routine Desktop App"
    },
    "win": {
      "target": [
        "portable",
        {
          "target": "nsis-web",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "/final/res/images/icon.ico",
      "publisherName": "Alexey Arno"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true
    }
  }
}
