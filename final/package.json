{
  "name": "day-routine",
  "version": "1.0.2",
  "productName": "Day Routine",
  "description": "Day's schedule organizer",
  "main": "main.js",
  "repository": "https://github.com/AlexeyArno/Day-Routine",
  "author": "AlexeyArno",
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.1.4"
  },
  "dependencies": {
    "node-notifier": "^5.2.1"
  },
  "build": {
    "appId": "DayRoutine",
    "directories":{
      "output": "../dist"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "portable",
      "icon": "/final/res/images/icon.ico"
    }
  }
}
